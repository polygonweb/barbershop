	block blockHead
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=960, shrink-to-fit=no")

		link(rel="apple-touch-icon", sizes="180x180", href="img/favicon/apple-touch-icon.png")
		link(rel="icon", type="image/png", sizes="32x32", href="img/favicon/favicon-32x32.png")
		link(rel="icon", type="image/png", sizes="16x16", href="img/favicon/favicon-16x16.png")
		link(rel="manifest", href="img/favicon/manifest.json")
		link(rel="mask-icon", href="img/favicon/safari-pinned-tab.svg", color="#5bbad5")
		link(rel="shortcut icon", href="img/favicon/favicon.ico")
		meta(name="msapplication-config", content="img/favicon/browserconfig.xml")
		meta(name="theme-color", content="#ffffff")

		link(rel="preload", as="font", type="font/woff2", crossorigin,
			href="https://fonts.gstatic.com/s/ptsansnarrow/v7/UyYrYy3ltEffJV9QueSi4TBlyDWpEJYVQuuPQMv_c-4.woff2"
		)
		link(rel="preload", as="font", type="font/woff2", crossorigin,
			href="https://fonts.gstatic.com/s/ptsansnarrow/v7/Q_pTky3Sc3ubRibGToTAYupmode525gDTwNyPqZGNXY.woff2"
		)
		link(rel="preload", as="script", href="js/main.js")
		script.
			document.documentElement.className = document.documentElement.className.replace('no-js', 'js');

		block blockHeadCSS
			link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=PT+Sans+Narrow:400,700&subset=latin,cyrillic")
			link(rel="stylesheet", href="css/main.css")

		block blockHeadJS
			//- +ie("if lt IE 9")
			//- 	<script src="js/html5shiv.min.js"></script>
			//- 	<script src="js/respond.min.js"></script>
			//- 	<script src="js/nwmatcher-1.2.5.js"></script>
			//- 	<script src="js/selectivizr-min.js"></script>

		block blockTitle
		- var title = 'Barbershop. ' + (pageTitle ? pageTitle : '')
		title #{title}

	block blockPage
	body.page(class=classNames)
		.page-inner
			+pageHeader(menuItems, pageTitle)

			main.page-content
				.container
					block pageContent

			include ../partials/footer.pug

		block portals
			include ../partials/auth.pug

		block blockBodyJS
			script(src="js/main.js")
