extends ../partials/master.pug

block blockTitle
	- var pageTitle = 'Главная'

block prepend blockHeadCSS

block append blockHeadCSS

block prepend blockHeadJS

block append blockHeadJS

block prepend blockBodyJS

block append blockBodyJS

block blockPage
	- var classNames = 'page_index'

block append pageContent

	h1.logo(title="BarberShop Borodinski") BarberShop Borodinski

	+features(features)

	.main-widget
		.main-widget__cell
			h2.main-widget__title.title новости
			+newsList(newsList)
			.widget__controls
				a(href="#404").btn.widget__control все новости

		.main-widget__cell
			h2.main-widget__title.title фотогалерея
			+photoGallery(photoGallery)


	.main-widget
		.main-widget__cell
			h2.main-widget__title.title контактная информация
			.paragraph
				div barbershop «borodinski»
				div адрес: г. санкт-петербург, б. конюшенная, д. 19/8
				div
					| телефон: #[a(href="tel:+749566602666").text-link +7 (495) 666-02-666]

			.paragraph
				div ВРЕМЯ РАБОТЫ:
				div ПН — ПТ: С 10:00 ДО 22:00
				div СБ — ВС: С 10:00 ДО 19:00

			.widget
				.widget__controls.contacts-toolbar
					a(href=mapLink.full, target="_blank" data-modal='{ "target": "#map-modal", "action": "open" }').btn.widget__control как проехать
					a(href="#404").btn.widget__control обратная связь

		.main-widget__cell
			h2.main-widget__title.title записаться
			p.paragraph укажите желаемую дату и время и мы свяжемся с вами для подтверждения брони
			form(action="", name="").subscription-form.widget
				.widget__controls
					input.input.widget__control(type="text" name="date", value="", placeholder="дата")
					input.input.widget__control(type="text" name="time", value="", placeholder="время")
					input.input.widget__control(type="text" name="name", value="", placeholder="ваше имя")
					input.input.widget__control(type="text" name="phone", value="", placeholder="телефон")
					.subscription-form__footer
						button.btn.widget__control.widget__control_full отправить

block append portals
	+modal({id: "map-modal", class: "modal_align_middle"})
		.contact-map
			iframe(
				src=mapLink.embed
				width="768"
				height="560"
				frameborder="0"
				style="border:0"
				allowfullscreen
			)
